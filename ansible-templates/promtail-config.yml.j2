server:
  http_listen_port: 9080
  grpc_listen_port: 0

positions:
  filename: /tmp/positions.yaml

clients:
  - url: http://loki:3100/loki/api/v1/push

scrape_configs:
  - job_name: django-logs
    static_configs:
      - targets:
          - localhost
        labels:
          job: django
          service: deadwood-service
          env: lab
          __path__: /var/log/django/*.log

  - job_name: modsecurity-logs
    static_configs:
      - targets:
          - localhost
        labels:
          job: modsecurity
          service: waf
          env: lab
          log_type: audit
          __path__: /var/log/waf/*.log
